    <init-param>
    <param-name>Name</param-name>
    <param-value>Rohan</param-value>
    </init-param>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>A5a</servlet-name>
    <url-pattern>/S1</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>S2</display-name>
    <servlet-name>A5b</servlet-name>
    <servlet-class>org.p1.A5b</servlet-class>
    <init-param>
    <param-name>City</param-name>
    <param-value>Pune</param-value>
    </init-param>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>A5b</servlet-name>
    <url-pattern>/S2</url-pattern>
  </servlet-mapping>
</web-app>

